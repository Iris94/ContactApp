

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Person</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">

                <form id="editExistingPerson">
                    <div class="mb-3">
                        <label for="editFirstName" class="form-label">First Name</label>
                        <input id="editFirstName" type="text" minlength="1" maxlength="50"
                               class="form-control" name="First Name" required />
                    </div>
                    <div class="mb-3">
                        <label for="editLastName" class="form-label">Last Name</label>
                        <input id="editLastName" type="text" minlength="1" maxlength="50"
                               class="form-control" name="Last Name" required />
                    </div>

                    <button type="button" onclick="editPhoneNumber()">Add Phone Number</button>
                    <div id="editPhoneNumbersContainer" class="mb-3">
                        <label class="form-label">Phone Numbers:</label>
                    </div>

                    <button type="button" onclick="editEmailAddress()">Add Email Address</button>
                    <div id="editEmailAddressesContainer" class="mb-3">
                        <label class="form-label">Email Addresses:</label>
                    </div>

                    <div class="mb-3">
                        <label for="editSexDropdown" class="form-label">Sex: </label>
                        <select id="editSexDropdown" class="form-select" name="editSexGender" >
                            <option value="Male" >Male</option>
                            <option value="Female" >Female</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="editStateDropdown" class="form-label">State: </label>
                        <select id="editStateDropdown" class="form-select" name="State" required>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="editCityDropdown" class="form-label">City: </label>
                        <select id="editCityDropdown" class="form-select" name="City" required>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="editBirthday" class="form-label">Birthday: </label>
                        <input id="editBirthday" type="date" class="form-control" name="Birthday" required />
                    </div>

                    <div class="mb-3">
                        <label for="editAge" class="form-label">Age: </label>
                        <input id="editAge" type="text" class="form-control" name="Age" readonly />
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="saveChangesButton" class="btn btn-primary">Save Changes</button>
            </div>
        </div>
    </div>
</div>
