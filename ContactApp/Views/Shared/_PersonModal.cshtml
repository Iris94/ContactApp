

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#personModal">
    ...add a contact
</button>

<!-- Modal -->
<div class="modal fade" id="personModal" tabindex="-1" aria-labelledby="personModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Add New Contact</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                
                <form id="addNewContactForm">
                    <div class="mb-3">
                        <label for="firstName" class="form-label">First Name</label>
                        <input id="firstName" type="text" minlength="1" maxlength="50" 
                            class="form-control" name="First Name" required />
                    </div>
                    <div class="mb-3">
                        <label for="lastName" class="form-label">Last Name</label>
                        <input id="lastName" type="text" minlength="1" maxlength="50" 
                            class="form-control" name="Last Name" required />
                    </div>
                    <div class="mb-3">
                        <label for="phoneNumber" class="form-label">Phone Number</label>
                        <input id="phoneNumber" type="tel" class="form-control" name="Phone Number"
                            pattern="[0-9]{3}/[0-9]{3}-[0-9]{3}" maxlength="11" placeholder="xxx/xxx-xxx" 
                            required/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Sex</label>
                        <br />
                        <label class="form-label" for="sexMale">Male: </label>
                        <input id="sexMale" type="radio" name="sexGender" value="Male" required/>
                        <br />
                        <label class="form-label" for="sexFemale">Female: </label>
                        <input id="sexFemale" type="radio" name="sexGender" value="Female" required />
                    </div>
                    <div class="mb-3">
                        <label for="emailAddress" class="form-label">Email: </label>
                        <input id="emailAddress" type="email" class="form-control" name="Email"
                               maxlength="50" placeholder="aaa@bbb.ccc" />
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>